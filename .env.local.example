# Variables de entorno para desarrollo local
# Copia este archivo a .env y ajusta los valores seg√∫n necesites

# Backend API URL
VITE_API_URL=http://localhost:5000

# Base de datos (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/opendoors_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=opendoors_db

# Seguridad (JWT)
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Azure OpenAI (opcional)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
OPENAI_API_VERSION=2024-02-01

# Azure Document Intelligence (opcional)
AZURE_DOC_INTELLIGENCE_ENDPOINT=
AZURE_DOC_INTELLIGENCE_KEY=

# Azure Cognitive Search (opcional)
AZURE_SEARCH_ENDPOINT=
AZURE_SEARCH_ADMIN_KEY=
AZURE_SEARCH_INDEX_NAME=opendoors-invoices

# Azure Storage (opcional)
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER_NAME=invoices
